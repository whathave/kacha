/**index.wxss**/
page{
  height: 100%;
}
.flexContainer{
  font-size: 10px;
  width: 100%;
  height: 100%;
}
swiper{
  width: 100%;
  height: 100%;
}
swiper swiper-item{
  position: relative;
}
swiper .slide-image{
  background-size: cover;
  background-position: center center;
  display: inline-block;
  width: 100%;
  height: 100%; 
}
swiper .image-info{
  position: absolute;
  box-sizing: border-box;
  bottom: 0;
  left: 0;
  background: url(data:image/png;base64,) repeat-x center center;
  background-size: 10rpx 120rpx;
  width: 100%;
  height: 120rpx;
  padding: 1rpx 30rpx;
  opacity: 0.7;
}
swiper .image-info .title{
  display: inline-block;
  padding: 0rpx 0;
}
swiper .image-info .title text{
  font-size: 36rpx;
}
swiper .image-info .author text{
  font-size: 26rpx;
}
swiper .image-info text{
  display: inline-block;
  width: 100%;
  color: #FFF;
}
swiper .image-info .user-motto{
  position: absolute;
  right:30rpx;
  bottom: 30rpx;
  width: 110rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  background-color: #CCC;
  border-radius: 3px;
  color: #FFF;
  font-size: 26rpx;
  /* background: url(data:image/png;base64,) repeat-x center center; */
  /* background-size: 48rpx 48rpx; */
}